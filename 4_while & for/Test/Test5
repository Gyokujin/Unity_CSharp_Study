using Microsoft.Unity.VisualStudio.Editor;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Test5 : MonoBehaviour
{
    // 첫번째 줄에 *이 1개 두번째 줄에 *이 3개 세번째 줄에 *이 5개... 반복하여 10번째 줄까지 출력하는 프로그램
    
    void Start()
    {
        Solution();
    }

    void Solution()
    {
        string word = "*";

        for (int i = 0; i < 10; i++)
        {
            if (i != 0)
            {
                word += "**";
            }

            Debug.Log(word);
        }
    }
}
