using JetBrains.Annotations;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Encapsulation : MonoBehaviour
{
    // public : 공개. 외부에서도 접근 가능하다.
    // private : 비공개. 외부에서 접근 불가능하다.(C#에서는 디폴트로 private)
    // protected : private과 유사하지만 상속받은 자식 클래스에서는 접근 가능하다.

    string name; // 접근제한자를 입력하지 않으면 private으로 지정된다.
    public int hp;
    protected int mp; // protected이기 때문에 자식 클래스는 접근이 가능하다.

    void Start()
    {
        
    }

    void Show() // private
    {

    }

    public void Move() // public이기 때문에 외부에서 접근 가능하다.
    {
        
    }
}
