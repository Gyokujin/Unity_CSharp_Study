using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Interface : MonoBehaviour
{
    // interface : 어떤 이름의 메소드가 여기 존재하기로 했다고 선언.

    void Start()
    {
        Car porsche = new Car();
        porsche.TurnOn();

        ITurnOnable someTV = new TV(); // interface 또한 클래스 형변환이 가능하다.
        someTV.TurnOn();
    }
}
